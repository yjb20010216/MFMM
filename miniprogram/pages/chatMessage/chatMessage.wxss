/* pages/chatMessage/chatMessage.wxss */
.head {
    width: 100%;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    border-bottom: 1px dashed #b4b5b6;
}

image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.message {
    /* display: flex;
    flex-direction: row;
    justify-content: space-between; */
    padding-top: 10rpx;
}

.leftMessage,
.rightMessage view {
    overflow: hidden;
    margin: 20rpx 0rpx 30rpx;
}

.leftMessage img {
    float: left;
    margin-left: 20rpx;
}

.leftMessage text {
    float: left;
    background-color: white;
    padding: 10rpx 15rpx;
    /* max-width: 290px; */
    border-radius: 12rpx;
    font-size: 16px;
    color: black;
    margin-left: 13rpx;
    position: relative;
    line-height: 24rpx;
}

.rightMessage img{
    float: right;
    margin-right: 20rpx;
}

.rightMessage text {
    float: right;
    background-color: #00b26a;
    padding: 10px 15px;
    max-width: 290px;
    border-radius: 12px;
    font-size: 16px;
    color: #000;
    margin-right: 13px;
    position: relative;
    line-height: 24px;
}


.sendMessage {
    width: 100%;
    position: fixed;
    bottom: 10rpx;
}

.sendMessage textarea {
    border: 1px solid #b4b5b6;
    width: 75%;
    display: inline-block;
    margin-left: 20rpx;
    margin-right: 10rpx;
    padding: 6rpx 10rpx;
    font-size: 18px;
}

.sendMessage button {
    width: 100rpx;
    height: 70rpx;
    background: #00b26a;
    display: inline-block;
    font-size: 15px;
    font-weight: 400;
    line-height: 70rpx;
}